# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator=true
separator_block_width= 10
#markup=none

# Blocks
#
# Each block displays in order in the i3status bar

[load_average]
label=
interval=10
separator=false
color=#00FF00

[memory]
label=
separator=false
interval=1
color=#1793D1

[disk]
#label=:
label=
interval=30
#color=#1793D1
color=#cc241d
#color=#859900

[iface]
color=#00FF00
interval=1
label= 

[wireless]
label=
command=echo "$(/sbin/iw dev wlp8s0 link | grep SSID | cut -d " " -f 2-)"
#command=[[ -z "$(iwgetid -r)" ]] || echo "$(iwgetid -r) "
color=#d33682
#color=#98971a
interval=2

[media]
label=
command=echo "$(playerctl metadata artist) - $(playerctl metadata title)"
color=#50C878
interval=1

[volume]
label=
instance=Master
interval=1
signal=10
#color=#d70a53
color=#cc241d

[brightness]
label=
command= printf "%.0f" $(xbacklight -get)
interval=1
signal=2
color=#d79921

[battery]
label=🔋
markup=pango
interval=30
#color=#458588

[time]
label=🕑
command=date '+%a %Y-%m-%d %l:%M:%S %p'
interval=1
color=#928374
separator_block_width=0
